{
  "plugins": [
    "https://plugins.dprint.dev/json-0.20.0.wasm",
    "https://plugins.dprint.dev/markdown-0.19.0.wasm",
    "https://plugins.dprint.dev/toml-0.7.0.wasm",
    "https://plugins.dprint.dev/g-plane/pretty_yaml-v0.5.1.wasm"
  ],
  "json": {
    "indentWidth": 2,
    "lineWidth": 80
  },
  "markdown": {
    "lineWidth": 80,
    "textWrap": "always"
  },
  "toml": {
    "indentWidth": 2,
    "lineWidth": 80
  },
  "yaml": {
    "indentWidth": 2,
    "printWidth": 80,
    "quotes": "preferSingle"
  },
  "excludes": [
    ".coverage-files/htmlcov/**",
    "node_modules/**",
    "dist/**",
    ".venv/**",
    "**/*-lock.json"
  ]
}
